<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="example1.InteractionPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="enter your number and click the button"/>
            <Entry x:Name="firstnumber" Placeholder="enter your first number"/>
                <Entry x:Name="secondnumber" Placeholder="enter your second number"/>
               <Button x:Name="Interactionbutton" Text="Add these numbers"
                    Clicked="Interactionbutton_Clicked"/>
                <Label x:Name="resultLabel" Text=""/>
                

        </StackLayout>
    </ContentPage.Content>
</ContentPage>